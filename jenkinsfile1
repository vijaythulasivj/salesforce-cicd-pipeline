
pipeline {
    agent any

    environment {
        CONSUMER_KEY = credentials('sf-consumer-key')
        SF_USERNAME = credentials('sf-username')
        SF_CMD = '"C:\\Program Files\\sf\\bin\\sf.cmd"'
        ALIAS = "myAlias"
        INSTANCE_URL = "https://test.salesforce.com"
    }

    parameters {
        booleanParam(name: 'REDEPLOY_METADATA', defaultValue: false, description: 'Redeploy previously backed-up metadata?')
    }

    stages {

        stage('Authenticate Salesforce') {
            steps {
                withCredentials([file(credentialsId: 'sf-jwt-private-key', variable: 'JWT_KEY')]) {
                    bat """
                        %SF_CMD% auth jwt grant ^
                            --client-id %CONSUMER_KEY% ^
                            --jwt-key-file "%JWT_KEY%" ^
                            --username %SF_USERNAME% ^
                            --instance-url %INSTANCE_URL% ^
                            --alias %ALIAS% ^
                            --set-default ^
                            --no-prompt
                    """
                }
            }
        }

        stage('Validate Destructive Deployment') {
            when {
                expression { return !params.REDEPLOY_METADATA }
            }
            steps {
                script {        
                    timeout(time: 20, unit: 'MINUTES') {
                        def deployStatus = bat(
                            script: """
                                %SF_CMD% project deploy start ^
                                    --target-org %ALIAS% ^
                                    --manifest destructive\\package.xml ^
                                    --post-destructive-changes destructive\\destructiveChanges.xml ^
                                    --wait 20 ^
                                    --dry-run ^
                                    --ignore-conflicts ^
                                    --json > deploy-result.json
                            """,
                            returnStatus: true
                        )
        
                        def deployJson = readJSON file: 'deploy-result.json'
                        if (deployStatus != 0 || deployJson.status != 0 || !deployJson.result?.success) {
                            error "Dry-run deployment failed: ${deployJson.message ?: 'Unknown error'}"
                        }
        
                        echo "Deployment Summary:"
                        echo "Total Components: ${deployJson.result.numberComponentsTotal}"
                        echo "Deployed: ${deployJson.result.numberComponentsDeployed}"
                        echo "Errors: ${deployJson.result.numberComponentErrors}"
                        echo "Status: ${deployJson.result.status}"
                    }
                }
            }
        }

        stage('Backup Metadata for Rollback') {
            when {
                expression { return !params.REDEPLOY_METADATA }
            }
            steps {
                echo "Backing up metadata before destructive deployment..."
                bat """
                    %SF_CMD% project retrieve start ^
                        --target-org %ALIAS% ^
                        --manifest destructive\\package.xml ^
                        --output-dir backup ^
                        --wait 10 ^
                        --json
                """
            }
        }
        
        stage('Execute Destructive Deployment') {
            when {
                expression { return !params.REDEPLOY_METADATA }
            }
            steps {
                echo "Executing destructive deployment..."
                bat """
                    %SF_CMD% project deploy start ^
                        --target-org %ALIAS% ^
                        --manifest destructive\\package.xml ^
                        --post-destructive-changes destructive\\destructiveChanges.xml ^
                        --wait 20 ^
                        --ignore-conflicts ^
                        --json
                """
            }
        }

        stage('Rollback Metadata') {
            when {
                expression {
                    return currentBuild.result == 'FAILURE' // only rollback on failure
                }
            }
            steps {
                echo "Rolling back..."
                bat """
                    %SF_CMD% project deploy start ^
                        --target-org %ALIAS% ^
                        --metadata-dir backup ^
                        --wait 20 ^
                        --ignore-conflicts ^
                        --json
                """
            }
        }


        stage('Redeploy Metadata (Manual Trigger)') {
            when {
                expression { return params.REDEPLOY_METADATA }
            }
            steps {
                echo "Redeploying previously deleted metadata..."
                bat """
                    %SF_CMD% project deploy start ^
                        --target-org %ALIAS% ^
                        --source-dir backup ^
                        --wait 20 ^
                        --ignore-conflicts ^
                        --json
                """
            }
        }
    }
}

